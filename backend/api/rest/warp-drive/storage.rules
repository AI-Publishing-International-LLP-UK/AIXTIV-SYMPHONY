rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to scene backgrounds
    match /scenes/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to fleet images
    match /fleet/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}