  "global_settings": {
    "logging_level": "verbose",
    "error_handling": {
      "retry_count": 3,
      "backoff_strategy": "exponential",
      "alert_threshold": "critical"
    },
    "resource_limits": {
      "max_concurrent_tasks": 12,
      "memory_limit_per_agent": "4GB",
      "timeout_default": 3600
    }
  },
  "agents": {
    "roles": [
      {
        "id": "architect",
        "description": "Designs system components and ensures architectural integrity",
        "capabilities": ["system_design", "code_review", "technical_documentation"],
        "access_levels": ["all_components", "all_documentation"]
      },
      {
        "id": "developer",
        "description": "Implements components and features according to specifications",
        "capabilities": ["code_implementation", "unit_testing", "debugging"],
        "access_levels": ["assigned_components", "technical_documentation"]
      },
      {
        "id": "qa_engineer",
        "description": "Tests and validates system components for quality assurance",
        "capabilities": ["test_automation", "integration_testing", "performance_testing"],
        "access_levels": ["test_suites", "metrics_data", "bug_tracking"]
      },
      {
        "id": "security_specialist",
        "description": "Ensures security standards and best practices are followed",
        "capabilities": ["security_analysis", "vulnerability_scanning", "compliance_checking"],
        "access_levels": ["security_configs", "audit_logs", "credentials"]
      },
      {
        "id": "data_scientist",
        "description": "Develops and optimizes data models and analytics capabilities",
        "capabilities": ["data_modeling", "machine_learning", "analytics_optimization"],
        "access_levels": ["data_sources", "model_repositories", "analytics_tools"]
      },
      {
        "id": "project_manager",
        "description": "Coordinates tasks and ensures project milestones are met",
        "capabilities": ["task_scheduling", "resource_allocation", "progress_reporting"],
        "access_levels": ["all_tasks", "metrics_dashboards", "team_communication"]
      }
    ],
    "communication": {
      "protocols": ["direct_message", "task_comment", "event_notification"],
      "channels": {
        "development": "For code implementation discussions",
        "architecture": "For system design discussions",
        "security": "For security-related communications",
        "planning": "For task planning and coordination"
      },
      "synchronization": {
        "frequency": "hourly",
        "method": "state_broadcasting"
      }
    }
  },
