{
  "version": "1.0",
  "sequence": {
    "phase1": {
      "name": "foundation_setup",
      "priority": 1,
      "actions": [
        {
          "component": "dream_commander",
          "action": "initialize",
          "params": {
            "mode": "primary",
            "verify_dependencies": true
          },
          "success_criteria": {
            "health_check": true,
            "connectivity_test": true
          }
        }
      ]
    },
    "phase2": {
      "name": "squad_leads_activation",
      "priority": 2,
      "dependencies": ["phase1"],
      "actions": [
        {
          "component": "architect",
          "action": "initialize",
          "params": {
            "mode": "squad_lead",
            "squad": "development"
          }
        },
        {
          "component": "rix_manager",
          "action": "initialize",
          "params": {
            "mode": "squad_lead",
            "squad": "operations"
          }
        }
      ]
    },
    "phase3": {
      "name": "squad_members_activation",
      "priority": 3,
      "dependencies": ["phase2"],
      "actions": [
        {
          "component": "development_squad",
          "action": "initialize_members",
          "parallel": true
        },
        {
          "component": "operations_squad",
          "action": "initialize_members",
          "parallel": true
        }
      ]
    },
    "phase4": {
      "name": "system_verification",
      "priority": 4,
      "dependencies": ["phase3"],
      "actions": [
        {
          "component": "dream_commander",
          "action": "verify_system_state",
          "params": {
            "verify_connections": true,
            "check_squad_readiness": true,
            "validate_communication": true
          }
        }
      ]
    }
  },
  "rollback_procedures": {
    "automatic_triggers": {
      "health_check_failure": {
        "action": "restart_phase",
        "max_attempts": 3
      },
      "communication_failure": {
        "action": "rebuild_connections",
        "timeout": "5m"
      }
    },
    "manual_triggers": {
      "emergency_shutdown": {
        "action": "graceful_shutdown",
        "notification": "all_squads"
      }
    }
  },
  "monitoring": {
    "startup_metrics": [
      "phase_completion_time",
      "resource_utilization",
      "error_rate"
    ],
    "health_indicators": [
      "squad_connectivity",
      "agent_responsiveness",
      "system_coherence"
    ]
  }
}
