# Anthology AI Publishing Environment Configuration
# Sample file - Replace with actual values
# Note: Actual .env file should not be committed to version control

# API Configuration
ANTHOLOGY_API_ENDPOINT=https://us-west1-aixtiv-symphony.cloudfunctions.net/anthology
ANTHOLOGY_API_VERSION=v1

# Authentication
ANTHOLOGY_API_KEY=your-api-key-here
ANTHOLOGY_PUBLISHING_TOKEN=your-publishing-token-here

# Storage Configuration
ANTHOLOGY_STORAGE_BUCKET=anthology-ai-assets
ANTHOLOGY_MEDIA_BUCKET=anthology-media-assets

# Service Configuration
ANTHOLOGY_CONTENT_SERVICE_ENABLED=true
ANTHOLOGY_PUBLISHING_SERVICE_ENABLED=true
ANTHOLOGY_METADATA_SERVICE_ENABLED=true
ANTHOLOGY_MEDIA_SERVICE_ENABLED=true

# Integration Configuration
ANTHOLOGY_ANTHROPIC_INTEGRATION=true
ANTHOLOGY_ANTHROPIC_MODEL=claude-3-opus
ANTHOLOGY_FIRESTORE_COLLECTION=anthology-content
ANTHOLOGY_GITHUB_REPOSITORY=C2100-PR/anthology-ai-publishing

# Workflow Configuration
ANTHOLOGY_AUTO_PUBLISHING=true
ANTHOLOGY_APPROVAL_REQUIRED=false
ANTHOLOGY_QUALITY_CHECK_LEVEL=high

# Logging and Monitoring
ANTHOLOGY_LOG_LEVEL=info
ANTHOLOGY_MONITORING_ENABLED=true
