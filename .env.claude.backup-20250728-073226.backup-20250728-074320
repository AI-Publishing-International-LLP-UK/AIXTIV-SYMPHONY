# Claude OAuth2 Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================================================
# CLAUDE OAUTH2 CREDENTIALS
# ================================================================
# These will be obtained from your OAuth2 provider (GitHub or Claude)
# DO NOT commit real values to version control

# GitHub OAuth Application Credentials
CLAUDE_CLIENT_ID=your_github_oauth_app_client_id_here
CLAUDE_CLIENT_SECRET=your_github_oauth_app_client_secret_here

# ================================================================
# GOOGLE CLOUD CONFIGURATION
# ================================================================
# Your Google Cloud Project ID where Secret Manager is configured
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Optional: Path to service account key file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ================================================================
# CLAUDE TOKEN MANAGER CONFIGURATION
# ================================================================
# Configuration path (optional - defaults to providers/claude/config.yaml)
CLAUDE_CONFIG_PATH=providers/claude/config.yaml

# Environment (development, staging, production)
NODE_ENV=development

# ================================================================
# INTEGRATION GATEWAY CONFIGURATION
# ================================================================
# Port for OAuth callback server
OAUTH_CALLBACK_PORT=8080

# Base URL for your integration gateway
INTEGRATION_GATEWAY_BASE_URL=http://localhost:8080

# ================================================================
# GITHUB INTEGRATION SETTINGS
# ================================================================
# GitHub API base URL
GITHUB_API_BASE_URL=https://api.github.com

# GitHub organization
GITHUB_ORGANIZATION=AI-Publishing-International-LLP-UK

# ================================================================
# MCP REGION CONFIGURATION
# ================================================================
# Default MCP region
DEFAULT_MCP_REGION=mocorix2

# Tenant configuration
DEFAULT_TENANT=ai-publishing-international-llp-uk

# ================================================================
# SECURITY SETTINGS
# ================================================================
# Enable PKCE (Proof Key for Code Exchange)
PKCE_ENABLED=true

# Token refresh threshold in seconds
TOKEN_REFRESH_THRESHOLD_SECONDS=300

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# ================================================================
# MONGODB ATLAS CONFIGURATION (for HRAICRMS)
# ================================================================
# MongoDB connection string
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database

# ================================================================
# PAYMENT INTEGRATION (Stripe/Xero)
# ================================================================
# Stripe configuration
STRIPE_ENABLED=true
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Xero configuration
XERO_ENABLED=true
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret

# ================================================================
# INSTRUCTIONS FOR SETUP
# ================================================================
# 1. Copy this file to .env: cp .env.claude .env
# 2. Fill in your actual OAuth2 credentials
# 3. Configure your Google Cloud project
# 4. Test the configuration with: npm run test:claude-auth
# 5. Never commit .env to version control (it's in .gitignore)
