# üîê ASOOS Integration Gateway Environment Variables Template
# Copy to .env and populate with actual values
# NEVER commit .env to git - it's already in .gitignore

# ================================
# CORE SYSTEM CONFIGURATION
# ================================

# Node Environment
NODE_ENV=development
PORT=8080

# ================================
# DATABASE CONFIGURATION
# ================================

# MongoDB Atlas (Primary Database)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/asoos-production

# ================================
# GOOGLE CLOUD CONFIGURATION
# ================================

# Project Configuration
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Secret Manager
GOOGLE_CLOUD_SECRETS_ENABLED=true

# ================================
# SALLYPORT AUTHENTICATION
# ================================

# SallyPort OAuth
SALLYPORT_CLIENT_ID=your-sallyport-client-id
SALLYPORT_CLIENT_SECRET=your-sallyport-client-secret
SALLYPORT_REDIRECT_URI=https://your-domain.com/auth/callback

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRY=24h

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-characters-minimum

# Session Security
SESSION_SECRET=your-session-secret-key

# ================================
# API KEYS (Use Secret Manager in Production)
# ================================

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# ================================
# INTEGRATION SERVICES
# ================================

# Cloudflare
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# GitHub (for automation)
GITHUB_TOKEN=your-github-token

# ================================
# MONITORING & LOGGING
# ================================

# Logging Level
LOG_LEVEL=info

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# ================================
# DEVELOPMENT ONLY
# ================================

# Debug Mode (NEVER enable in production)
DEBUG_MODE=false

# Test Database (for testing only)
TEST_MONGODB_URI=mongodb://localhost:27017/asoos-test

