{
  "hosting": [
    {
      "target": "asoos",
      "public": "public/asoos-2100-com",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "asoosApi" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "2100-cool",
      "public": "public/2100-cool",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "copilotApi" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "ai-pilot-agents",
      "public": "public/ai-pilot-agents",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "pilotApi" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "aixtiv-symphony-opus1",
      "public": "public/aixtiv-symphony-opus1",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "symphonyApi" },
        { "source": "**", "destination": "/index.html" }
      ]
    },
    {
      "target": "api-for-warp-drive",
      "public": "public/api-for-warp-drive",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/api/**", "function": "warpDriveApi" },
        { "source": "**", "destination": "/index.html" }
      ]
    }
  ],
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "us-west1"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
