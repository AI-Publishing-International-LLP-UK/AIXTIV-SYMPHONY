# =================================================================================
# CORE APPLICATION CONFIGURATION
# =================================================================================

# Google Cloud Platform Configuration
GCP_PROJECT_ID=api-for-warp-drive
CLOUD_ML_REGION=us-west1

# Server Configuration
PORT=8080
NODE_ENV=production

# =================================================================================
# OAUTH2 AUTHENTICATION CONFIGURATION
# =================================================================================

# OAuth2 Client Configuration (Production)
OAUTH2_CLIENT_ID=mocoa-diamond-sao-production-client
OAUTH2_CLIENT_SECRET=diamond-sao-oauth2-production-secret
OAUTH2_REDIRECT_URI=http://localhost:8080/auth/callback

# OAuth2 Authorization Server
OAUTH2_AUTHORIZATION_URL=http://localhost:8080/auth/authorize
OAUTH2_TOKEN_URL=http://localhost:8080/auth/token

# OAuth2 Scopes
OAUTH2_SCOPES=openid,profile,voice:generate,admin:interface

# =================================================================================
# DIAMOND SAO AUTHENTICATION SETTINGS
# =================================================================================

# Diamond SAO Authority Configuration
DIAMOND_SAO_AUTHORITY="Mr. Phillip Corey Roark"
DIAMOND_SAO_ID="0000001"
DIAMOND_SAO_CLASSIFICATION=COMMAND_CENTER

# Authentication Configuration
AUTH_TOKEN_EXPIRATION=3600
AUTH_REFRESH_TOKEN_EXPIRATION=86400
AUTH_SESSION_SECRET=diamond-sao-secure-session-key

# =================================================================================
# ELEVENLABS CONFIGURATION (Optional - for voice features)
# =================================================================================

# ElevenLabs API Configuration (Production - loaded from GCP Secret Manager)
# ELEVENLABS_API_KEY will be loaded dynamically from GCP Secret Manager
ELEVENLABS_API_KEY_SECRET_NAME=ELEVENLABS_API_KEY
ELEVENLABS_BASE_URL=https://api.elevenlabs.io

# =================================================================================
# SECURITY CONFIGURATION
# =================================================================================

# JWT Configuration
JWT_SECRET=diamond-sao-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ISSUER=diamond-sao-mocoa-interface

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,https://mocoa.api-for-warp-drive.com

# =================================================================================
# LOGGING AND MONITORING
# =================================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/oauth2-server.log

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =================================================================================
# PRODUCTION MODE SETTINGS
# =================================================================================

# Production Mode Settings (No mocks or simulations)
PROD_OAUTH_ENABLED=true
PROD_SSL_REQUIRED=true
PROD_DEBUG_DISABLED=true
PROD_SECURITY_HARDENED=true
